{
    "extends": "standard",
    "overrides": [
        {
            "files": [
                "*"
            ],
            "rules": {
                "indent": [
                    "error",
                    4
                ],
                "space-before-function-paren": [
                    "error",
                    "never"
                ],
                "padded-blocks": "off",
                "curly": [
                    "error",
                    "multi-or-nest"
                ]
            }
        }
    ]
}