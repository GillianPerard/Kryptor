{
    "extends": "standard",
    "overrides": [
        {
            "files": [
                "*"
            ],
            "rules": {
                "indent": [
                    "error",
                    4,
                    {
                        "SwitchCase": 1
                    }
                ],
                "space-before-function-paren": [
                    "error",
                    "never"
                ],
                "padded-blocks": "off",
                "no-unused-expressions": "off"
            }
        }
    ]
}